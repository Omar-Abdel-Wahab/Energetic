@model IEnumerable<IP_Project.Models.News>
@{
    ViewBag.Title = "Energetic";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<br>

<div class="container img-rounded">
<div id="myCarousel" class="carousel slide img-rounded" style="border:8px inset #333333 " data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active ">
            <img src="@Model.ElementAt(0).image" class="img-rounded" alt="Los Angeles">
            <div class="carousel-caption">
                <h3>@Html.ActionLink(Model.ElementAt(0).title, "NewsSingle", "News", new {id = Model.ElementAt(0).id } , new { @style = " color:white;text-decoration:none" })</h3>
            </div>
        </div>

        <div class="item">
            <img src="@Model.ElementAt(1).image" class="img-rounded" alt="Chicago">
            <div class="carousel-caption">
                <h3>@Html.ActionLink(Model.ElementAt(1).title, "NewsSingle", "News", new {id = Model.ElementAt(1).id } ,new {@style=" color:white;text-decoration:none" })</h3>
            </div>
        </div>

        <div class="item">
            <img src="@Model.ElementAt(2).image" class="img-rounded" alt="New York">
            <div class="carousel-caption">
                <h3>@Html.ActionLink(Model.ElementAt(2).title, "NewsSingle", "News", new { id = Model.ElementAt(2).id }, new { @style = " color:white;text-decoration:none" })</h3>
            </div>
        </div>
        <div class="item">
            <img src="@Model.ElementAt(3).image" class="img-rounded" alt="New York">
            <div class="carousel-caption">
                <h3>@Html.ActionLink(Model.ElementAt(3).title, "NewsSingle", "News", new { id = Model.ElementAt(3).id }, new { @style = " color:white;text-decoration:none" })</h3>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
</div>
<br>
<br>


    <!-- video and news-->
    <div class="col-sm-6">
            <iframe height='670' src='https://filgoal.olinevid.com/embed/66X3sToGO1' class="img-rounded col-sm-12" style='border:groove; background-color:black' allowfullscreen></iframe>
    </div>
    <div class="col-sm-6">
        <div class="panel panel-primary">
            <div class="panel-heading" style="border:2px ridge #1983ec">Recent News</div>
            <div class="panel-body"  style="border:2px groove #1983ec">

                <div class="card text-right">
                    @Html.ActionLink(Model.ElementAt(4).title, "NewsSingle", "News", new { id = Model.ElementAt(4).id }, null)
                    <img src="@Model.ElementAt(4).image" class="card-img-top img-rounded" id="i4" alt="Card image" style="margin-left:20px">
                    <br><sub class="col" style="margin-right:5px">@String.Format("{0:f}",Model.ElementAt(4).date)</sub>
                </div>
                
                <hr>
                <div class="card text-right">
                    @Html.ActionLink(Model.ElementAt(5).title, "NewsSingle", "News", new { id = Model.ElementAt(5).id }, null)
                    <img src="@Model.ElementAt(5).image" class="card-img-top img-rounded col" id="i5" alt="Card image" style="margin-left:20px">
                    <br><sub class="col" style="margin-right:5px">@String.Format("{0:f}", Model.ElementAt(5).date)</sub>
                </div>
                
                <hr>
                <div class="card text-right">
                    @Html.ActionLink(Model.ElementAt(6).title, "NewsSingle", "News", new { id = Model.ElementAt(6).id }, null)
                    <img src="@Model.ElementAt(6).image" class="card-img-top img-rounded" id="i6" alt="Card image" style="margin-left:20px">
                    <br><sub class="col" style="margin-right:5px">@String.Format("{0:f}", Model.ElementAt(6).date)</sub>
                </div>
            </div>
        </div>
    </div>

