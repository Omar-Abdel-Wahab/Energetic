@model IP_Project.Models.Event
@{
    ViewBag.Title = "CreateEvent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel-body img-rounded" style="background-color:white">
    <h2>Create an Event</h2>
    @using (Html.BeginForm("CreateAnEvent", "Back"))
    {
        <div class="form-group">
            <label for="title">Title</label>
            @Html.TextBoxFor(e => e.title, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="date">Date</label>
            @Html.TextBoxFor(e => e.date, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="image">Image</label>
            @Html.TextBoxFor(e => e.image, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            @Html.TextBoxFor(e => e.content, new { @class = "form-control" })
        </div>
        @Html.HiddenFor(e => e.id)
        <button type="submit" class="btn btn-primary">Save</button>
    }
    </div>