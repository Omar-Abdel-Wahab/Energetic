@model IP_Project.Models.News
@{
    ViewBag.Title = "CreateNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel-body img-rounded" style="background-color:white">
    <h2>Create a News</h2>
    @using (Html.BeginForm("CreateANews", "Back"))
    {
        <div class="form-group">
            <label for="title">Title</label>
            @Html.TextBoxFor(n => n.title, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="date">Date</label>
            @Html.TextBoxFor(n => n.date, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="image">Image</label>
            @Html.TextBoxFor(n => n.image, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            @Html.TextAreaFor(n => n.content, new { @class = "form-control" })
        </div>
        @Html.HiddenFor(n => n.id)
        <button type="submit" class="btn btn-primary ">Save</button>
    }
    </div>